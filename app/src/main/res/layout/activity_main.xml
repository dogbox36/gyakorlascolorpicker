<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/layout">


    <EditText
        android:id="@+id/szoveg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/NBgomb"
        android:layout_centerInParent="true"
        android:text="Írj be valami szöveget"
        android:textAlignment="center" />

    <Button
        android:text="Nagybetű"
        android:id="@+id/NBgomb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <Button android:id="@+id/KBgomb"
        android:text="Kisbetű"
        android:layout_below="@id/NBgomb"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button android:id="@+id/VSZGomb"
        android:text="szín generálás"
        android:layout_below="@id/KBgomb"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/textView"
        android:text="Valami szöveg bármi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/VSZGomb"
        />

</RelativeLayout>